<div class="row">
    <div class="col-xs-12">
        <div class="form-group">
            <label>{{label}}</label>

            {{input type="search" name=name value=value required=required productType=productType key-up="searchCities" class="form-control" autocomplete="off"}}
        </div>
    </div>
</div>

{{#if cities}}
    <ul>
        {{#each cities as |city|}}
            <li {{action "clickedCity" city.description city._id}}>{{city.description}}</li>
        {{/each}}
    </ul>
{{/if}}